<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.accumed.entity.Patient"
          extends="_minimal"
          name="patientList">
        <property name="memberNumber"/>
        <property name="birthDate"/>
        <property name="gender"/>
        <property name="city"/>
        <property name="homePhone"/>
        <property name="workPhone"/>
        <property name="addressLine1"/>
        <property name="province"/>
    </view>
    <view class="com.company.accumed.entity.Facility"
          extends="_minimal"
          name="facilityLookup">
        <property name="facilityCode"/>
    </view>
    <view class="com.company.accumed.entity.Provider"
          extends="_local"
          name="provider-view">
        <property name="primarySpecialty"
                  view="_minimal"/>
    </view>
    <view class="com.company.accumed.entity.PatientAdmission"
          extends="_local"
          name="admission-view">
        <property name="facility"
                  view="_minimal"/>
    </view>
    <view class="com.company.accumed.entity.Patient"
          extends="_local"
          name="patient-edit">
        <property name="admissions"
                  view="_local">
            <property name="facility"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.accumed.entity.Facility"
          extends="_local"
          name="facility-view"/>
    <view class="com.company.accumed.entity.Claim"
          extends="_local"
          name="claim-view">
        <property name="patient"
                  view="_minimal">
            <property name="memberNumber"/>
        </property>
        <property name="referredBy"
                  view="_minimal"/>
        <property name="facility"
                  view="_minimal"/>
        <property name="provider"
                  view="_minimal"/>
    </view>
    <view class="com.company.accumed.entity.Claim"
          extends="_local"
          name="claim-edit">
        <property name="patient"
                  view="_minimal"/>
        <property name="referredBy"
                  view="_minimal"/>
        <property name="facility"
                  view="_minimal"/>
        <property name="claimLine"
                  view="_local"/>
        <property name="provider"
                  view="_minimal"/>
    </view>
</views>
